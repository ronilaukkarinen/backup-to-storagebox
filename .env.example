# Hetzner Storagebox Configuration
# Copy this file to .env and configure with your actual values

# Storagebox credentials (required)
STORAGEBOX_USER="u123456"
STORAGEBOX_HOST="u123456.your-storagebox.de"

# SSH configuration
SSH_KEY_PATH="$HOME/.ssh/id_rsa"
SSH_PORT="23"

# Backup settings
DRY_RUN=false
VERBOSE=true

# Rsync options
RSYNC_BANDWIDTH_LIMIT=""  # Leave empty for no limit, or set like "1000" for 1MB/s
RSYNC_TIMEOUT="300"       # Connection timeout in seconds
RSYNC_RETRIES="3"         # Number of retry attempts
RSYNC_MAX_SIZE="2G"       # Maximum file size to transfer (e.g., "2G", "500M")

# Exclude patterns (comma-separated, leave empty for no excludes)
# Example: EXCLUDES=".cache/,cache/,*.tmp,/dev/,/proc/,/sys/"
EXCLUDES=""

# Better Stack Heartbeat (optional)
# Get your heartbeat URL from Better Stack dashboard
BETTER_STACK_HEARTBEAT=